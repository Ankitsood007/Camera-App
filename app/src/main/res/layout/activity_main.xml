<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextureView
        android:id="@+id/textureViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/captureButtonID"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/videoBtnID"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="1dp"
        android:background="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/rotatebtnID"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="9dp"
        android:layout_toLeftOf="@+id/videoBtnID"
        android:background="@android:drawable/ic_menu_rotate" />

    <Button
        android:id="@+id/recBtn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/captureButtonID"
        android:layout_alignLeft="@+id/captureButtonID"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-183dp"
        android:layout_marginTop="680dp"
        android:text="Enter Video Mode"
        android:textColor="#228B22"
        android:textSize="12dp"
        android:textStyle="bold|italic" />


</RelativeLayout>